<div class="row">
  <div class="col-md-12">
    <h2>Items</h2>
    <a href="/items/add" class="btn btn-success pull-right">Add Post</a>
    <hr />
    {{#if data.items}}
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Price</th>
            <th>Category</th>
            <th>Published</th>
            <th></th> <!-- Empty header for the "Remove" column -->
          </tr>
        </thead>
        <tbody>
          {{#each data.items}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.postDate}}</td>
            <td>${{this.price}}</td>
            <td>
              <a href="/items?category={{this.category}}">{{this.category}}</a>
            </td>
            <td>{{#if this.published}}true{{else}}false{{/if}}</td>
            <td>
              <a href="/items/delete/{{this.id}}" class="btn btn-danger">
                Remove
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{else}}
    <p>No items available.</p>
    {{/if}}
  </div>
</div>
